<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
            <!-- <li>Buy Food</li>
            <li>Cook Food</li>
            <li>Eat Food</li> -->
            
    
            <!-- <% for (var i=0;i<newlistitems.length;i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newlistitems[i].name %></p>

                </div>
            <% } %>     -->
            <% newlistitems.forEach(function(item){ %>
                <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" ><span><%= item.name %></span>
                    <span><button class="deleteitem" type="submit" name="deleteitem" value="<%= item._id %>">-</button></span>
                </div>    
                <input type="hidden" name="listname" value="<%= listTitle %>"></input>
            </form>
            <% }) %>
            <form action="/" method="post">
                <input type="text" name="newitem" placeholder="New Item" autocomplete="off" required>
                <button class="additem" type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
    </div>
    <%- include("footer")-%>
    <!-- This Is EJS Layout -->

</body>
</html>